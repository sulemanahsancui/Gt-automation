{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["es6", "dom", "ES2021.String"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
